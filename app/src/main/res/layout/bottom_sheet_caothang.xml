<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.CaoThangActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/viewPager2CT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="500dp"
                        android:layout_height="500dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_18" />

                    <ImageView
                        android:layout_width="500dp"
                        android:layout_height="500dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_19" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/id156"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager2CT"
                android:paddingLeft="10dp"
                android:text="RESTAURANT" />

            <TextView
                android:id="@+id/id15174"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id156"
                android:paddingLeft="10dp"
                android:text="86 Cao Thang"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id151746"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id15174"
                android:paddingLeft="10dp"
                android:text="Open : 9:00-11:00" />

            <LinearLayout
                android:id="@+id/linearLayoutLocationCaoThang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id151746"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/id151746"
                    android:backgroundTint="#C5C0C0">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_location_on_24" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="86 Cao Thang, District 3 , Ho Chi Minh City, Viet Nam" />
            </LinearLayout>

            <View
                android:id="@+id/view1451"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/linearLayoutLocationCaoThang"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#9F9D9D" />

            <LinearLayout
                android:id="@+id/linearLayoutPhoneCaoThang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1451"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/id151746"
                    android:backgroundTint="#C5C0C0">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_phone_24" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Hotline : 1900 0000" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLocationCaoThang"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/linearLayoutPhoneCaoThang"
                android:layout_margin="10dp"
                app:cardCornerRadius="8sp"
                >
                <ImageView

                    android:src="@drawable/img_22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnReserveCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewLocationCaoThang"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="ShowDialogAdd"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FF9800"

                android:text="Contact" />
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>