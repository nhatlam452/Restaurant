<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5"
    android:id="@+id/rl"
    tools:context=".activities.MenuActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/actionBarKhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarKhac"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:title="More"
            app:titleTextColor="#000000" />
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_below="@+id/actionBarKhac"
        android:layout_above="@id/bottomNavigationMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_uni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Utilities"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvHistory"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/tv_uni"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="16sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="19dp"
                        android:src="@drawable/ic_baseline_history_edu_24" />

                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="History"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/cvDieuKhoan"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/cvHistory"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="16sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="19dp"
                        android:src="@drawable/ic_baseline_rule_24" />

                    <TextView
                        android:id="@+id/tv_clause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Clause"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvDieuKhoan"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"

                android:text="Support"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1456"
                app:cardCornerRadius="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_support">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linearLayoutRate"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_star_outline_24"
                            />
                        <TextView
                            android:layout_weight="8"
                            android:id="@+id/tv_rate"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="Rate"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />
                    <LinearLayout
                        android:id="@+id/linearLayoutTVOTG"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_message_24"
                            />
                        <TextView
                            android:id="@+id/tv_voice"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="The voice of the Guest"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv1456"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Account"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv14417"
                app:cardCornerRadius="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_account">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linearLayoutYourAccount"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_verified_user_24"
                            />
                        <TextView
                            android:id="@+id/tv_youraccount"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="Your Account"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />
                    <LinearLayout
                        android:id="@+id/linearLayoutYourAddress"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_location_on_24"
                            />
                        <TextView
                            android:id="@+id/tv_youraddress"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="Your Address"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />
                    <LinearLayout
                        android:id="@+id/linearLayoutYourSetting"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_settings_24"
                            />
                        <TextView
                            android:id="@+id/tv_yoursetting"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="Setting"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        />
                    <LinearLayout
                    android:id="@+id/linearLayoutLogOut"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_exit_to_app_24"
                        />
                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="Log out"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linearLayoutAdmin"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_exit_to_app_24"
                            />
                        <TextView
                            android:id="@+id/tv_admin"
                            android:layout_weight="8"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="Admin"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomNavigationMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/main_menu" />
</RelativeLayout>